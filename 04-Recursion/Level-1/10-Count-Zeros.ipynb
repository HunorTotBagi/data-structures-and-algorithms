    "# Counter inside argument\n",
    "\n",
    "def count(n):\n",
    "    return helper(n, 0)\n",
    "\n",
    "def helper(n,c):\n",
    "    if n == 0:\n",
    "        return c\n",
    "    \n",
    "    rem = n % 10\n",
    "    if rem == 0:\n",
    "        return helper(int(n/10), c+1)\n",
    "    return helper(int(n/10),c)\n",
    "\n",
    "count(320204612064210420)"
   ]
